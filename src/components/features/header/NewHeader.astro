---
import jcceLogo from "@assets/images/logos/logo-jcce.png";
import { Picture } from "astro:assets";
import CardLink from "./CardLink.astro";

const navLinks = [
  { label: "Home", href: "/", hasChild: false },
  { label: "¿Quienes Somos?", href: "/nosotros", hasChild: false },
  {
    label: "Servicios",
    href: "/servicios",
    hasChild: true,
    children: [
      {
        label: "Dentro de Joven Club",
        href: "dentro-de-joven-club",
      },
      {
        label: "Fuera de Joven Club",
        href: "fuera-de-joven-club",
      },
      {
        label: "Servicos Móvil",
        href: "servicios-movil",
      },
      {
        label: "Servicos a Terceros",
        href: "servicios-a-terceros",
      },
      {
        label: "Servicos Sociales",
        href: "servicios-sociales",
      },
      {
        label: "Servicos Web",
        href: "servicios-web",
      },
    ],
  },
  { label: "Noticias", href: "/noticias", hasChild: false },

  { label: "Atención", href: "/atencion", hasChild: false },
  { label: "Tienda Virtual", href: "/tienda", hasChild: false },
];
---

<header
  class="sticky top-2 inset-x-0 flex flex-wrap md:justify-start md:flex-nowrap z-50 w-full before:absolute before:inset-0 before:max-w-[66rem] before:mx-2 before:lg:mx-auto before:rounded-[26px] before:bg-neutral-800/30 before:backdrop-blur-md font-slab"
>
  <nav
    class="relative max-w-[66rem] w-full py-2.5 ps-5 pe-2 md:flex md:items-center md:justify-between md:py-0 mx-2 lg:mx-auto"
  >
    <div class="flex items-center justify-between">
      <a
        class="flex-none rounded-md text-xl inline-block font-semibold focus:outline-none focus:opacity-80"
        href="/"
        aria-label="Joven Club Home"
      >
        <Picture
          formats={["avif", "webp"]}
          loading={"eager"}
          class={"w-24 h-auto"}
          src={jcceLogo}
          alt="Joven Club Logo - Home"
        />
      </a>
      <div class="md:hidden">
        <button
          type="button"
          class="hs-collapse-toggle size-8 flex justify-center items-center text-sm font-semibold rounded-full bg-bluestrong text-black"
          id="hs-navbar-floating-dark-collapse"
          aria-expanded="false"
          aria-controls="hs-navbar-floating-dark"
          aria-label="Toggle navigation"
          data-hs-collapse="#hs-navbar-floating-dark"
        >
          <svg
            aria-hidden="true"
            class="hs-collapse-open:hidden shrink-0 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="3" x2="21" y1="6" y2="6"></line>
            <line x1="3" x2="21" y1="12" y2="12"></line>
            <line x1="3" x2="21" y1="18" y2="18"></line>
          </svg>
          <svg
            aria-hidden="true"
            class="hs-collapse-open:block hidden shrink-0 size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <div
      id="hs-navbar-floating-dark"
      class="hs-collapse hidden overflow-hidden transition-all duration-300 basis-full grow md:block"
      aria-labelledby="hs-navbar-floating-dark-collapse"
    >
      <div
        class="flex flex-col md:flex-row md:items-center md:justify-end py-2 md:py-0 md:ps-7"
      >
        {
          navLinks.map((link) => (
            <CardLink
              label={link.label}
              href={link.href}
              hasChild={link.hasChild}
              children={link.children || []}
            />
          ))
        }

        <div>
          <a
            class="group inline-flex items-center gap-x-2 py-2 px-3 bg-[#ff0] font-medium text-sm text-neutral-800 rounded-full focus:outline-none"
            href="/contact"
          >
            Contáctanos
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>
