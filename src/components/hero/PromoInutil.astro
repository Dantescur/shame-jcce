---
import { Image } from "astro:assets";
import enzona from "../../assets/enzona.png";
import transfer from "../../assets/transfer.png";

const promos = [
  {
    name: "Enzona",
    url: "http://enzona.net",
    logo: enzona,
    alt: "logo enzona",
  },
  {
    name: "Transfermovil",
    url: "http://etecsa.cu/es/aplicaciones/transfermovil",
    logo: transfer,
    alt: "logo transfermovil",
  },
];
---

<section class="w-full">
  <div class="container mx-auto">
    <h1 class="text-2xl text-center font-open mb-2 font-bold text-gray-800">
      Acceda a nuestros servicios mediante el pago electr√≥nico
    </h1>
    <div class="flex justify-evenly">
      {
        promos.map((service) => (
          <a
            href={service.url}
            class="flex items-center justify-center p-4 rounded-lg hover:bg-slate-100 transition-all duration-200 ease-in-out"
          >
            <Image
              class="w-16 h-16 transition-transform duration-200 ease-in-out hover:scale-110"
              src={service.logo}
              alt={service.alt}
              loading={"eager"}
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
